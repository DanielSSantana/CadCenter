@model ContatoModel
@{
}

<form method="post"> 
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        <label for="nome">Nome:</label>
        <input class="form-control" asp-for="nome" type="text" />
    </div>    

    <div class="form-group">
        <label>Cpf:</label>
        <input class="form-control" type="text" asp-for="cpf" />
    </div>

    <div class="form-group">
        <label>Telefone:</label>
        <input class="form-control" type="text" asp-for="telefone" />
    </div>

    <div class="form-group">
        <label>Email:</label>
        <input class="form-control" type="text" asp-for="email" />
    </div>

    <button type="submit" asp-controller="Contatos" asp-action="Salvar">Salvar</button>
    <a asp-controller="Contatos" asp-action="Listar">Cancelar</a>
</form>